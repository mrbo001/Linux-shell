#文件执行时显示进度条
progress(){
        echo -n "$0: please wait..."
        #执行无限while循环
        while true
        do
                echo -n "."
                #休眠5秒
                sleep 5
        done
}

#杀死进程
progress_kill(){
        kill $MYSELF > /dev/null 2>&1
        echo -n "...done."
        echo
}

#例子dobackup()：创建一个1G的文件
dobackup(){
dd if=/dev/zero of=filename bs=1M count=1024
}

#将progress()函数放在后台运行
progress &
#保存progress()运行的进程号
MYSELF=$!

#例子dobackup()
dobackup

#杀死进程
progress_kill


